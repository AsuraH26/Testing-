[lights]
headlights			= f1, f2
;f3, f4, pribor_panel_light_1, pribor_panel_light_2

[f1]
bone				= left_light
color				= 1.0,1.0,1.0,1.0
range				= 35
cone_angle			= 60
spot_texture    = internal\internal_light_torch_r2	
